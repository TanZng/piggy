<div class="notification max-w-sm w-full item-bg-color shadow-lg rounded-lg pointer-events-auto">
  <div class="rounded-lg shadow-xs overflow-hidden dar border dark:border-blueGray-700">
    <div class="p-4">
      <div class="flex items-start">

        <div class="flex-shrink-0">
          <div class="h-6 w-6 <%= @icon_color_class %>">
            <%= heroicon @icon_class, options: { class: "text-primary-500" } %>
          </div>
        </div>

        <div class="ml-3 w-0 flex-1 pt-0.5">
          <p class="text-md leading-5 font-medium text-color">
            <%= @data[:title] %>
          </p>
          <% if @data[:body].present? %>
            <p class="mt-1 text-sm leading-5 text-color">
              <%= @data[:body] %>
            </p>
          <% end %>

          <% if @data[:list].present? %>
            <ul class="list-disc">
            <% @data[:list].each do |item| %>
              <li class="mt-1 text-sm leading-5 text-color">
              <%= item %>
              </li>
            <% end %>
            </ul>
          <% end %>
        </div>

        <div class="ml-4 flex-shrink-0 flex">
          <button class="delete inline-flex text-gray-400 focus:outline-none focus:text-gray-500 transition
          ease-in-out duration-150">
<!--            <i class="text-red-400 h-5 w-5 fas fa-times"></i>-->
            <%= heroicon "x-circle", options: { class: "text-red-400 h-6 w-6 text-primary-500" } %>
          </button>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
            const $notification = $delete.parentNode.parentNode.parentNode.parentNode.parentNode;
            console.log($notification);
            $delete.addEventListener('click', () => {
                $notification.parentNode.removeChild($notification);
            });
        });
    });
</script>