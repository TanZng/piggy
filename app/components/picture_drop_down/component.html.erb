<!-- Profile Picture component -->
<div class="ml-3 relative">
  <div class="dropbtn">
    <div class="group relative">

      <button   type="button"
                class="bg-gray-300 dark:bg-blueGray-700 bg-opacity-50 flex text-md rounded-full focus:outline-none"
                id="user-menu-button"
                aria-expanded="false" aria-haspopup="true"
      >
        <span class="sr-only">Open user menu</span>
        <img    id="drop-down-content-id"
                class="h-10 w-10 rounded-full overflow-hidden"
                src="<%= @picture_url %>" alt="">
      </button >

      <%# Drop Down Menu %>
      <ul class="absolute right-0	hidden text-gray-700 pt-1 text-center group-hover:block">
        <li class="">
          <a
            class="disable top nav-bar-button"
            href="#"
          >Profile</a
          >
        </li>
        <li class="">
          <a
            class="disable nav-bar-button"
            href="#"
          >Setting</a
          >
        </li>

        <hr class="shadow-lg border-0 bg-gray-700 dark:bg-gray-200 h-px	">

        <li class="">
          <%= link_to "Logout", destroy_user_session_path,
                      { method: :delete,
                        class:"bot nav-bar-button",
                        data: { confirm: 'Are you sure?' } }%>
        </li>
      </ul>
    </div>
  </div>
</div>