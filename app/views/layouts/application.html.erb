<!DOCTYPE html>
<html>
  <head>
    <title>Piggy</title>
    <%= render 'application/favicon' %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body class="bg-gray-100 dark:bg-blueGray-900">

  <%= render NavBar::Component.new(user_logged: current_user) %>

  <div class="md:container md:mx-auto pt-5 px-10 lg:px-20">

    <div class="fixed inset-0 px-4 py-6 pointer-events-none sm:p-6 sm:items-start sm:justify-end">
      <div class="flex flex-col items-end justify-center">
        <% flash.each do |type, data| %>
          <%= render Notification::Component.new(type: type, data: data) %>
        <% end %>
      </div>
    </div>

    <%= yield %>
  </div>
  </body>
</html>
